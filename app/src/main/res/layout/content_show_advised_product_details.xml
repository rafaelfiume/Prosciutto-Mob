<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ShowAdvisedProductDetailsActivity"
    tools:showIn="@layout/activity_show_advised_product_details"
    android:useDefaultMargins="true"
    android:alignmentMode="alignBounds"
    android:columnOrderPreserved="false"
    android:columnCount="2"
    android:orientation="horizontal">

    <TextView
        android:layout_gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name:"/>

    <TextView
        android:id="@+id/p_detail_name"
        android:ems="10"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_gravity="left"
        android:layout_column="0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Variety:" />

    <TextView
        android:id="@+id/p_detail_variety"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_gravity="left"
        android:layout_column="0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price:" />

    <TextView
        android:id="@+id/p_detail_price"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_gravity="left"
        android:layout_column="0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Reputation:" />

    <TextView
        android:id="@+id/p_detail_reputation"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_gravity="left"
        android:layout_column="0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fat (%):" />

    <TextView
        android:id="@+id/p_detail_fat"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/description_label"
        android:paddingTop="16dp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description:" />

    <TextView
        android:id="@+id/p_detail_description"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="2"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:layout_gravity="fill_horizontal"
        android:textStyle="bold"
        android:layout_columnSpan="2"
        android:text="(Source: Wikipedia)" />
</GridLayout>
